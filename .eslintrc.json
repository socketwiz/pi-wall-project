{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "rules": {
        "max-len": [2, 120, 4],
        "func-names": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "quotes": [2, "single"],
        "quote-props": [2, "always"],
        "semi": [2, "always"],
        "no-console": 1
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "google",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "_": true,
        "React": true,
        "ReactDOM": true
    }
}

